{{#each posts as |posticon|}}

<div class="content-center items-center rounded bg-blue-100 p-6 border-black w-1/2 mb-4">
        <h3 class="text-gray-700"> {{posticon.title}}</h3>
        <h4 class="text-gray-700">{{posticon.content}}</h4>
        <h5 class="text-gray-700">{{posticon.timestamp}}</h5>
        <a id="readLink"href="/{{posticon.id}}">
           See Full Blog
          </a>
</div>

{{/each}}